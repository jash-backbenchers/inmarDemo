.ignitor-table
    border 1px solid #DDDDDD
    font-family inherit
    & thead
        border-bottom 1px solid #e5e5e5
        background-color rgba(192, 192, 192, 0.18823529411764706)
        & tr
            & th
               padding 15px
               color #404040
               font-size 14px
               font-weight bold
               line-height 15px
               border none
               & .fa.fa-sort
                   color silver 
                   cursor pointer
               &.active_sort .fa.fa-sort-down, .fa.fa-sort-up
                   color #00afdc 
    & tbody
        & tr
            border-top 1px solid #DDDDDD
            & td 
                font-weight 300
                vertical-align middle
                border none
                color #4c4c4c
                padding 14px 15px
                font-size 14px
                letter-spacing 0.2px
                line-height 20px
            &:hover 
                // box-shadow: 0 8px 19px -5px rgba(0,175,219,0.15)
                // outline 1px solid #22A2CA
                cursor pointer
                background-color #f0f3f6
        
    & .pagin-block
        overflow hidden
        & td
            background-color #F5F7FA
            font-weight 100
            font-size 14px
            padding 5px
            padding-top 2px
        &:hover, &
            outline none
            color #5A6872
            background-color transparent
            box-shadow none
        & label
            margin 0px
            padding 8px
    & .pagin-button
        background-color transparent
        color #5A6872
        padding 8px 15px
        cursor pointer
        border none
    & .pagin-button:disabled
        color #999999
        cursor not-allowed
    & .pagin-select
        color inrPrimary
        font-size 14px
        background-color transparent
        border none
        outline none
.ignitor-table.fixed
    & thead
        display table
        width 100%
        table-layout fixed
    & tbody
        display block
        max-height 60vh
        overflow-y auto
        overflow-x hidden
        & tr
            display table
            width 100%
            table-layout fixed
        &::-webkit-scrollbar
            width 3px
        &::-webkit-scrollbar-track
            -webkit-box-shadow inset 0 0 0px rgba(0,1.0,0,0.3)
        &::-webkit-scrollbar-thumb
            background-color #b7b7b7
            outline 0px solid transparent
.bold
	font-weight bold
.error
    font-size 12px
    color red
    display block
    margin 2px 5px 0px 0px
.input-form-group
    margin 5px 0px
    label
        margin-bottom 2px
        display block